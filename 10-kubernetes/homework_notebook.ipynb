!docker run -it --rm -p 9696:9696 zoomcamp-model:3.13.10-hw10
!kind --version
# pod in Kubernetes, a pod is the smallest and simplest unit that one can 
# create and manage

!kubectl get services
#  correct command to register image with kind is load
!kind load docker-image zoomcamp-model:3.13.10-hw10
#  from the docker run command  9696 is used
#  docker run -it --rm -p 9696:9696 zoomcamp-model:3.13.10-hw10
# deployment.yaml is 
apiVersion: apps/v1
kind: Deployment
metadata:
  name: subscription
spec:
  selector:
    matchLabels:
      app: subscription
  replicas: 1
  template:
    metadata:
      labels:
        app: subscription
    spec:
      containers:
      - name: subscription
        image: zoomcamp-model:3.13.10-hw10
        resources:
          requests:
            memory: "64Mi"
            cpu: "100m"            
          limits:
            memory: "128Mi"  # Reasonable default
            cpu: "200m"      # Reasonable default
        ports:
        - containerPort: 9696  # <Port> value
!kubectl apply -f deployment.yaml
!kubectl get pods


!kubectl get pods
# subscription name is subscription-568c5d8cf-87mg9
#  to do the service.yaml
apiVersion: v1
kind: Service
metadata:
  name: subscription-service  # <Service Name>
spec:
  type: LoadBalancer
  selector:
    app: subscription  # <???> value
  ports:
  - port: 80
    targetPort: 9696  # <PORT> from deployment
# maximum replicas is 3, as the command shows  
kubectl autoscale deployment subscription --name subscription-hpa --cpu-percent=20 --min=1 --max=3
